<mvc:View
   controllerName="commentshub.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayblock="true">

   <App>
      <pages>
         <Page title="{/page/name}">
            <content>
               
               <FlexBox 
                  alignItems="Center"
                  justifyContent="Center">          

                  <Button text="Adicionar comentÃ¡rio" press=".addComment" />
               </FlexBox>
               
               <List items="{/comments}">
                  <CustomListItem type="Inactive">
                     <FlexBox>
                        <Text text="{id}" width="50px"/>
                        
                        <Text text="{comment}"/>

                        <Button 
                           text="Excluir"
                           class="content"
                           press=".rmComment"
                           width="100px"/>
                     </FlexBox>
                  </CustomListItem>             
               </List>

            </content>  
         </Page>
      </pages>
   </App>

</mvc:View>